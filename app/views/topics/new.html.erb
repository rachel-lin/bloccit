<h1>New Topic</h1>

<div class="row">

<!-- Left Column -->

  <div class="col-md-4">
    <p>Guidelines for topics</p>
    <ul>
      <li>Be holistic.</li>
      <li>Be self-explanatory.</li>
    </ul>
  </div>

<!-- Right Column -->

  <div class="col-md-8">

    <%= form_for @topic do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter Name of Topic" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: "Enter Description of Topic" %>
      </div>

      <div class="form-group">
        <%= f.label :public, class: 'checkbox' do %>
        <%= f.check_box :public %> Public Topic 
        <% end %>
      </div>

 
        <%= f.submit "Save", class: 'btn btn-success' %>


    <% end %>
    
  </div>

</div>

